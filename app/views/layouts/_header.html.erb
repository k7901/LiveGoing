<div class="container">
  <div class="row">
    <div class="fixed-top p-2">
      <div class="d-flex content-between align-items-center md-4 ">
        <div class="btn-group">
          <% if user_signed_in? %>
            <%= link_to hotels_path, class: "btn font-bold", class: "header-logo" do %>
              <h2><strong>Live Going</strong></h2>
            <% end %>
          <% else %>
             <%= link_to root_path, class: "btn font-bold", class: "header-logo" do %>
              <h2><strong>Live Going</strong></h2>
            <% end %>
          <% end %>
        </div>
        <div class="btn-group ml-auto">
          <nav class="d-flex align-items-center">
            <ul class="navbar-nav list-group-horizontal ">
              <% if user_signed_in? %>
                <div style="background-color: #e2eda8; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "マイページ", users_show_path, class: "btn font-bold ", style: " color: #48120E;" %></li>
                </div>
                <div style="background-color: #e2eda8; border-radius: 5px;">
                  <li class="nav-item"><%#= link_to "カート", comments_path, class: "btn font-bold ", style: " color: #48120E;"%></li>
                </div>
                <div style="background-color: #d6a5b5; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn font-bold ", style: "color: #48120E;"%></li>
                </div>
              <% elsif admin_signed_in? %>
                <div style="background-color: #d6d6a5; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "ホテル一覧", admin_hotels_path, class: "btn font-bold ", style: " color: #48120E;"%></li>
                </div>
                <div style="background-color: #ededa8; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "会員一覧", admin_users_path, class: "btn font-bold ", style: " color: #48120E;"%></li>
                </div>
                <div style="background-color: #ededa8; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "レビュー一覧", admin_root_path, class: "btn font-bold ", style: " color: #48120E;"%></li>
                </div>
                <div style="background-color: #ededa8; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "会場一覧", admin_venues_path, class: "btn font-bold ", style: " color: #48120E;"%></li>
                </div>
                <div style="background-color: #ededa8; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "サービス一覧", admin_services_path, class: "btn font-bold ", style: " color: #48120E;"%></li>
                </div>
                <div style="background-color: #d6a5b5; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn font-bold ", style: "background-color: #d6a5b5"%></li>
                </div>
              <% else %>
                <div style="background-color: #a4d5bd; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "ゲストログイン", user_guest_sign_in_path, class: "btn font-bold ", method: :post, style: " color: #48120E;" %></li>
                </div>
                <div style="background-color: #a4d5bd; border-radius: 5px;"><li class="nav-item">
                  <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "btn font-bold", style: "color: #48120E;"%></li>
                </div>
                <div style="background-color: #a5c9d6; border-radius: 5px;">
                  <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "btn font-bold", style: "color: #48120E;"%></li>
                </div>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>

    </div>
  </div>
</div>
