<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <div class = "row my-lg-1">
        <div class = col-3 , style="color: #48120E">
          ルームタイプ
        </div>
        <div class = "col-lg-9", style="color: #48120E">
          <h5><%= @room.name %></h5>
        </div>
      </div>
      <div class = "row my-lg-4", style="color: #48120E">
        <div class = col-3>
          ルーム詳細
        </div>
        <div class = "col-9", style="color: #48120E">
          <h5><%= @room.introduction %></h5>
        </div>
      </div>
      <div class = "row my-lg-4", style="color: #48120E">
        <div class = col-3>
          宿泊可能人数
        </div>
        <div class = "col-9 fs-4", style="color: #48120E">
          <%= @room.capacity %>
        </div>
      </div>
      <div class = "row my-lg-4", style="color: #48120E">
        <div class = col-3>
          部屋数
        </div>
        <div class = col-9, style="color: #48120E">
          <%= @room.amount %>
        </div>
      </div>
      <div class = "row my-lg-4", style="color: #48120E">
        <div class = col-3>
          税抜価格
        </div>
        <div class = col-9, style="color: #48120E">
            <%= @room.price %>
        </div>
      </div>
      <div class = "row my-lg-4", style="color: #48120E">
        <div class = col-3>
          確認事項
        </div>
        <div class = col-9, style="color: #48120E">
            <%= @room.checklist %>
        </div>
      </div>
    </div>
  <div class = "container">
    <div class = "row my-lg-2 justify-content-center", style="color: #48120E">
      <div class = "col-md-3">
        <div style="border: 2px solid #bee6d8; padding: 2px; border-radius: 5px; text-align: center;">
          <div style="background-color: #bee6d8; border-radius: 5px;">
            <%= link_to '編集する', edit_admin_hotel_room_path(@hotel), class: "btn btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
