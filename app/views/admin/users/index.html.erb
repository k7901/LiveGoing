<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center", style="color: #48120E">
          会員一覧
      </h2>
    </div>
      <table class= "table table-hover">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to admin_user_path(user.id) do %>
                <%= user.last_name %><%= user.first_name %>
                <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_active == true %>
                <p class = "text-success">有効</p>
              <% else%>
              　<p class = "text-secondary">退会済</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @users %>
  </div>
</div>
