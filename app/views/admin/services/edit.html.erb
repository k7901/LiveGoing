<div class = "container">
  <div class = "row">
    <div>
      <h3>サービス編集</h3>
        <%= form_with model: @service, url: admin_service_path,method: :patch do |f| %>
          <td><%= f.label :"サービス名", class: "mr-3" %></td>
          <td><%= f.text_field :name, class: "mr-5" %></td>
          <td><%= f.submit "変更を保存", class:"btn font-bold", style: "background-color: #E5E5CB; color: #1A120B;" %></td>
        <% end %>
    </div>
  </div>
</div>