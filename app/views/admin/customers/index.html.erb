<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center", style="color: #48120E">
        <i class="fa-regular fa-address-book" style="color: #e6c0c0;"></i>
          会員一覧
        <i class="fa-regular fa-address-book" style="color: #e6c0c0;"></i>
      </h2>
    </div>
    <div class="pt-5">
      <table class="table", style="color: #4d382e;">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>生年月日</th>
             <th>住所</th>
            <th>メールアドレス</th>
            <th>電話番号</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
                <% end %>
            </td>
            <td><%= customer.birthday %></td>
            <td><%= customer.address %></td>
            <td><%= customer.telephone_number %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active == true %>
                <p class = "text-success">有効</p>
              <% else%>
              　<p class = "text-secondary">退会済</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="all__paginate">
      <%= paginate @customers %>
    </div>
  </div>

