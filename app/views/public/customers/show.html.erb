<div class="Hochi-box-b">
  <div class="container">
    <div class = "row d-flex justify-content-center">
      <font size="10" face="Times New Roman">My Page</font><br/>
    </div>
    <% if @customer.email != "guest@example.com" %>
      <div class="row">
        <div class="col text-center p-4 h-100 w-100">
          <span class="pr-4">登録情報</span>
          <span class=""><%= link_to "編集する", customers_edit_path, class:"btn font-bold", style: "background-color: #ffe9a9; color: #1A120B;" %></span>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col text-center p-4 h-100 w-100">
        <table class="table table-bordered", style="color:#48120E;">
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= @customer.last_name %><%= @customer.first_name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class = "row d-flex justify-content-center">
      <div class="col text-center p-2">
    <!--<div class="col-sm-3 text-right font-weight-bold">-->
        <span class= "pr-4"></span>
        <span class=""><%#= link_to "一覧を見る",bookings_path, class:"btn font-bold", class: "btn font-bold ", style: "background-color: #e2eda8;" %></span>
      </div>
    </div>
  </div>
</div>