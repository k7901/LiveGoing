<div class="container">
  <div class="row">
    <div class="col-4 ml-5 mb-5 public-new-title text-center">
      <h1>新規会員登録</h1>
    </div>
  </div>
  <%= form_with model:@customer,url: registration_path(resource_name) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="form-row">
      <div class="col-3 form-group">
        <p class="mt-4">名前</p>
      </div>
      <div class="col-3 form-group">
        <%= f.label :姓 %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      </div>
      <div class="col-3 form-group">
        <%= f.label :名 %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-3 form-group">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-3 form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-3 form-group">
        <%= f.label :パスワード（６文字以上） %>
        <% if @minimum_password_length %>
        <% end %>
      </div>
      <div class="col-3 form-group">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-3 form-group">
        <%= f.label :パスワード（確認用） %>
      </div>
      <div class="col-3 form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-3 form-group offset-3">
        <%= f.submit "新規登録", class: "btn font-bold ", style: "background-color: #e2eda8;" %>
      </div>
    </div>
  <% end %>
  <div class="form-row">
    <div class="col-6 form-group mt-5 ml-5">
      <h1>既に会員済みの方</h1>
    </div>
  </div>
  <div class="form-row justify-content-center">
    <div class="col-4 form-group mt-1 ml-3">
        <span class="marker-P-green">
          <%= link_to "こちら", new_customer_session_path %></span>
          からログインしてください。
    </div>
  </div>
</div>
