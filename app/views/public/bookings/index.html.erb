<div class="container">
  <div class="row">
    <div class="col-3 mb-3 mx-auto text-center" >
      <div class="bookings-title">
        <h3>
          予約履歴一覧
        </h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 pt-5 mx-auto text-center font-weight-bold">
      <table class="table table-bordered border-info", style="color:#48120E;">
        <thead>
          <tr>
            <th class="col-1 table-danger">予約日</th>
            <th class="col-2 table-danger">ホテル</th>
            <th class="col-3 table-danger">部屋</th>
            <th class="col-1 table-danger">宿泊日時</th>
            <th class="col-1 table-danger">支払金額</th>
            <th class="col-2 table-danger">ステータス</th>
            <th class="col-2 table-danger">予約詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td>
              <span><%= booking.created_at.strftime('%Y/%m/%d') %></span>
            </td>
            <td>
              <%= booking.room.hotel.name %>
            </td>
            <td>
              <%= booking.costomer.name %>
            </td>
            <td>
              <%= booking.total_price %>円
            </td>
            <td><%#= booking.status_i18n %></td>
            <td><%= link_to "予約詳細", booking_path(booking.id), class: "btn font-bold ", class: "btn font-bold ", style: "background-color: #e2eda8;"%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<div class="row">
  <p class="font-weight-bold">
    <div class="all__paginate">
      <%= paginate @bookings %>
    </div>
  </p>
</div>

