

<%= form_with url: hotels_path, method: :get do |form| %>
  <%= form.text_field :venue %>
  <%= form.date_field :check_in_date %>
  <%= form.date_field :check_out_date %>
  <%= form.number_field :guests_count, min: 1 %>
  <%= form.number_field :rooms_count, min: 1 %>
  <%= form.submit "検索" %>
<% end %>




